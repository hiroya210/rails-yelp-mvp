<div class="banner">
  <div class="header">
    <h3><%= @restaurant.name %></h3>
     <% @average_rating.times do %>
       <i class="fas fa-star"></i>
     <% end %>
     <% (5 - @average_rating).times do %>
       <i class="far fa-star"></i>
     <% end %>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
  </div>
</div>
<div style="padding: 16px;">
  <h2>Review Highlights</h2>
</div>

<div class="d-flex">
  <div class="row">
   <div class="col-12">
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item">
          <% review.rating.times do %>
          <i class="fas fa-star"></i>
        <% end %>
        <% (5 - review.rating).times do %>
          <i class="far fa-star"></i>
        <% end %>
        <br>
          <%= review.content %>
        </li>
      <% end %>
    </ul>
   </div>
  </div>
  <div class="col-6">
    <%= render "reviews/form", restaurant: @restaurant, review: @review %>
  </div>
</div>

<%= link_to "Back to main", restaurants_path, class: "btn btn-primary", style: "margin: 16px 0px" %>